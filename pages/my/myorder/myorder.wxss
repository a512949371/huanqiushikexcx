/* pages/my/myorder/myorder.wxss */
@import '/app.wxss';
page{
  min-height: 100%;
  background-color: #f0f0f0;
}
.bgfff{
  background-color: #fff
}
.top-nav-box .nav{
  flex: 1;
  text-align: center
}
.top-nav-box .nav .text{
  font-size: 26rpx;
  color: #646464;
  border-bottom: 4rpx solid #fff;
  padding: 20rpx 0;
  display: inline-block
}
.top-nav-box .nav .active{
  color: #24C37E;
  border-bottom: 4rpx solid #24C37E;
}
.list-box{
  padding: 0 30rpx;
}
.list-box .box{
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}
.list-box .box .order-header{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e6e6e6;
}
.list-box .box .order-header .left{
  font-size: 26rpx;
  color: #323232;
}
.list-box .box .order-header .right{
  font-size: 26rpx;
  color: #EA6841
}
.list-box .box .shop-box{
  padding: 20rpx 0;
  align-items: center;
  border-bottom: 1px solid #e6e6e6
}
.list-box .box .shop-box .left{
  width: 120rpx;
  height: 120rpx;
}
.list-box .box .shop-box .left image{
  width: 120rpx;
  height: 120rpx;
  display: block
}
.list-box .box .shop-box .right{
  flex: 1;
  padding-left: 20rpx;
}
.list-box .box .shop-box .right .shop-name{
  font-size: 32rpx;
  color: #323232;
  font-weight: bold;
}
.list-box .box .shop-box .right .price-box{
  padding: 15rpx 0 0 0;
}
.list-box .box .shop-box .right .price-box .price{
  font-size: 24rpx;
  color: #505050;
}
.list-box .box .shop-box .right .price-box .price text{
  font-size: 36rpx;
  color: #EB333B
}
.list-box .box .shop-box .right .price-box .number{
  font-size: 24rpx;
  color: #323232
}
.list-box .box .pay-box{
  padding-top: 20rpx;
}
.list-box .box .pay-box .left{
  font-size: 28rpx;
  color: #969696
}
.list-box .box .pay-box .left text{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.list-box .box .pay-box .right .btn{
  padding: 10rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 1px solid #e6e6e6;
  color: #323232
}
.list-box .box .pay-box .right .btn-color{
  border: 1px solid #EA6841;
  color: #EA6841
}