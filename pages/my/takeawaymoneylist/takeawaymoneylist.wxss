page{
  min-height: 100%;
  background-color: #f0f0f0
}
.bgfff{
  background-color: #fff
}
.page-box{
  padding: 40rpx;
}
.data-box{
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx; 
}
