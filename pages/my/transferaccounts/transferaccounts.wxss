/* pages/my/transferaccounts/transferaccounts.wxss */
@import '/app.wxss';
page{
  min-height: 100%;
  background-color: #f0f0f0;
}
.bgfff{
  background-color: #fff;
}
.pt60{
  padding-top: 60rpx;
}
.page-box{
  padding:40rpx 26rpx;
  box-sizing: border-box;
}
.info-box{
  padding: 40rpx;
  border-radius: 15rpx;
}
.info-box .info{
  padding: 20rpx;
}
.info-box .info .desc{
  font-size: 32rpx;
  color: #141414;
  width: 160rpx;
  text-align: right
}
.info-box .info .input{
  outline: none;
  font-size: 32rpx;
  color: #333;
  flex: 1;
  padding-left: 40rpx;
}
.btn-box{
  padding: 20rpx 40rpx;
}
.desc{
  font-size: 24rpx;
  color: #E84343;
  text-align: center
}
.btn-box .btn{
  background-color: #24C37E;
  border-radius: 50rpx;
  padding: 25rpx 0;
  text-align: center;
  width: 80%;
  color: #fff;
  font-size: 32rpx;
}