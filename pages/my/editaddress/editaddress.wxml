<!--pages/my/buildaddress/buildaddress.wxml-->
<view class='page-box'>
 <view class='top-bg'>
  <view class='info-box bgfff'>
    <view class='info flex-box-bwteen'>
     <view class='left'>收货人</view>
     <input class='right' bindinput='_inputinfo' data-num='1' placeholder='请输入收货人姓名' placeholder-style='color:#ccc' value='{{info.realName}}'></input>
    </view>
    <view class='info flex-box-bwteen mt40'>
     <view class='left'>联系方式</view>
     <input class='right' bindinput='_inputinfo' data-num='2' type='number' placeholder='请输入联系方式' placeholder-style='color:#ccc' value='{{info.phone}}'></input>
    </view>
    <view class='info flex-box-bwteen mt40'>
     <view class='left'>收货地址</view>
     <input class='right' bindinput='_inputinfo' data-num='3' placeholder='请输入收货地址' placeholder-style='color:#ccc' value='{{info.address}}'></input>
    </view>
    <view class='btn-box flex-box-center pt20 mt40'>
      <view class='btn' bindtap='_saveadd'>确认保存</view>
    </view>
  </view>
 </view>
</view>
